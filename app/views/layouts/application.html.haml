!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "keywords"}/
    %title Marigold Dance Studio - Studio, New Jersey
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = javascript_include_tag 'https://www.google.com/recaptcha/api.js'
    = javascript_include_tag "https://checkout.stripe.com/checkout.js"
    = cloudinary_js_config
    %noscript
      %link{:href => "css/skel.css", :rel => "stylesheet"}/
      %link{:href => "css/style.css", :rel => "stylesheet"}/
      %link{:href => "css/style-wide.css", :rel => "stylesheet"}/
      %link{:href => "css/style-normal.css", :rel => "stylesheet"}/
    = csrf_meta_tags

  %body
    -# - if user_signed_in?
    -#   = current_user.email
    -#   = link_to('logout', destroy_user_session_path)
    -# - else
    -#   = link_to('login', new_user_session_path)

    / Header
    %header#header
      %h1#logo
        = link_to "MARIGOLD DANCE STUDIO", root_path
      %nav#nav
        #mobile-nav
          %i.fa.fa-align-justify  
        %ul.mobile-menu
          %li
            %a{:href => "#{root_path}#one"} THE STUDIO
          %li
            = link_to "TEAM & PROGRAMS", team_index_path 
          %li
            = link_to "CLASS SCHEDULE & PRICING", schedules_path
          %li
            = link_to "RENT THE SPACE", rent_index_path
          %li
            - if controller.controller_name == "home"
              %a{:href => "#contact"} CONTACT              
            - else
              %a{:href => "#", id: "contact-link"} CONTACT
    = yield

:coffee
  $(document).ready ->
    $("#mobile-nav").click (event) ->
      $("#nav ul").toggle()
    $()

    $('#contact-link').click ->
      window.location.href = "http://marigolddancestudio.com#contact"

