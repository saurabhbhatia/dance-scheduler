%h1 Schedule
%table 
  %thead
    %tr
      %th Title
      %th Date
      %th Instructor
      %th Instructor Bio
      %th Start time
      %th End time
      %th No. of Spots
      %th
      %th
      - if user_signed_in?
        %th
        %th

  %tbody
    - @class_schedules.each do |class_schedule|
      %tr
        %td= class_schedule.title
        %td= class_schedule.date.strftime("%d-%m-%Y") 
        %td= class_schedule.instructor.name
        %td= class_schedule.instructor.bio.html_safe
        %td= class_schedule.start_time.strftime("%H:%M") 
        %td= class_schedule.end_time.strftime("%H:%M")
        %td= class_schedule.spots
        %td= link_to 'Book Now', new_attendee_path(class_schedule_id: class_schedule.id)
        %td= link_to 'Details', class_schedule
        - if user_signed_in?
          %td= link_to 'Edit', edit_class_schedule_path(class_schedule)
          %td= link_to 'Destroy', class_schedule, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br
- if user_signed_in?
  = link_to 'New class_schedule', new_class_schedule_path
