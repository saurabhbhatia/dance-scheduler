= form_for @instructor do |f|
  - if @instructor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@instructor.errors.count, "error")} prohibited this instructor from being saved:"
      %ul
        - @instructor.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :bio
    = f.text_area :bio
  
  .field
    = f.label :image_path
    = f.text_field :image_path
  
  .actions
    = f.submit 'Save'
