%section#team-intro.main.style1.dark.fullscreen
  .content.container
    %header
      %h3 Team & Programs
    / Lightbox Gallery
    .container.gallery{:class => "75%"}
      .row.images{:class => "0%"}
        - @instructors.each do |instructor|
          .team-container
            .team-header
              = image_tag instructor.image_path, height: "260px", width: "280px"
              %span 
                = instructor.name 
                &#44;
                = instructor.title
            .team-content
              = instructor.bio.html_safe
